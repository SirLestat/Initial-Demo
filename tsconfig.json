{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".", // Define la base del proyecto
    "paths": {
      "@/*": ["./*"] // Define el alias '@'
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/_app.js"],
  "exclude": ["node_modules"]
}
